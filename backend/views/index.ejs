<script>
async function loadSampleData() {
    try {
        const response = await fetch('/api/health');
        const data = await response.json();
        
        alert(`System Status: ${data.status}\n\nData Counts:\n• NAMASTE: ${data.counts.namaste}\n• ICD-11: ${data.counts.icd11}\n• Mappings: ${data.counts.mappings}\n\nLast Loaded: ${data.dataLoaded}`);
    } catch (error) {
        alert('Error loading system data: ' + error.message);
    }
}
</script>

